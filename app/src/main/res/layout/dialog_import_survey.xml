<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:paddingEnd="16dp"
			  android:paddingStart="16dp">


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif"
		android:paddingBottom="4dp"
		android:paddingTop="16dp"
		android:text="@string/name_survey"
		android:textColor="@android:color/black"
		android:textSize="@dimen/material_typography_subtitle1"/>

	<android.support.design.widget.TextInputEditText
		android:id="@+id/survey_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autofillHints=""
		android:hint="@string/survey_title_hint"
		android:inputType="text"
		android:paddingBottom="8dp"
		android:paddingTop="4dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif"
		android:paddingBottom="4dp"
		android:paddingTop="8dp"
		android:text="@string/survey_description"
		android:textColor="@android:color/black"
		android:textSize="@dimen/material_typography_subtitle1"/>


	<android.support.design.widget.TextInputEditText
		android:id="@+id/survey_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autofillHints=""
		android:hint="@string/survey_description_hint"
		android:inputType="text"
		android:paddingBottom="8dp"
		android:paddingTop="4dp"/>


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif"
		android:paddingBottom="4dp"
		android:paddingTop="8dp"
		android:text="@string/survey_settings"
		android:textColor="@android:color/black"
		android:textSize="@dimen/material_typography_subtitle1"/>

	<android.support.design.widget.TextInputEditText
		android:id="@+id/survey_project_directory"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autofillHints=""
		android:hint="@string/survey_project"
		android:inputType="text"
		android:paddingBottom="4dp"
		android:paddingTop="4dp"/>

	<android.support.design.widget.TextInputEditText
		android:id="@+id/survey_identifier"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:autofillHints=""
		android:hint="@string/survey_identifier"
		android:inputType="text"
		android:paddingBottom="8dp"
		android:paddingTop="4dp"/>


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif"
		android:paddingBottom="4dp"
		android:paddingTop="8dp"
		android:text="@string/internet_address"
		android:textColor="@android:color/black"
		android:textSize="@dimen/material_typography_subtitle1"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="sans-serif"
			android:text="@string/soscisurvey_base_url"
			android:textSize="@dimen/material_typography_caption"/>

		<TextView
			android:id="@+id/survey_project_directory_url"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="sans-serif"
			android:text="@string/survey_project"
			android:textColor="@color/colorAccent"
			android:textSize="@dimen/material_typography_caption"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="sans-serif"
			android:text="@string/soscisurvey_url_suffix"
			android:textSize="@dimen/material_typography_caption"/>

		<TextView
			android:id="@+id/survey_identifier_url"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="sans-serif"
			android:text="@string/survey_identifier"
			android:textColor="@color/colorAccent"
			android:textSize="@dimen/material_typography_caption"/>
	</LinearLayout>

</LinearLayout>